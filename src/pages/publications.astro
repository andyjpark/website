<style>
  .publications {
    ol {
      counter-reset: publication-counter;
      list-style-type: none;
      padding: 0;

      li {
        counter-increment: publication-counter; /* Increment the counter */
        border-bottom: 1px solid #ddd;
        padding: 10px 0;
        position: relative;
      }

      li:before {
        content: counter(publication-counter) "."; /* Display the counter */
        position: absolute;
        left: -30px; /* Adjust as needed */
        /* top: 0; */
        color: #666;
      }

